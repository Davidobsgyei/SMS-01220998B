<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>




<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.studentmanagement.ui.StudentsController"
      spacing="30" alignment="CENTER">
    <Label text="University Command Center" />
    <VBox spacing="30" alignment="CENTER" style="-fx-padding: 50; -fx-background-color: #f0f2f5;">
        <Label text="ACCRA TECHNICAL UNIVERSITY" style="-fx-font-size: 32; -fx-font-weight: bold;" />

        <GridPane hgap="20" vgap="20" alignment="CENTER">
            <Button text="Student Records" onAction="#showManagement" prefHeight="100" prefWidth="200" style="-fx-font-size: 16; -fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="System Settings" onAction="#showSettings" prefHeight="100" prefWidth="200" style="-fx-font-size: 16; -fx-background-color: #95a5a6; -fx-text-fill: white;" GridPane.columnIndex="1" />

        </GridPane>

        <HBox spacing="20" alignment="CENTER">
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            </VBox>
        </HBox>
    </VBox>
</VBox>

